{% extends "layouts/base.njk" %}

{% block content %}

  {# ===== MENU IFRAME ===== #}
  <section class="py-16 bg-white">

        <div class="p-4">
          <iframe
            src="https://88restaurants.com/1153/online_orders/frame"
            title="The Poke Project Online Menu"
            class="w-full border-0 rounded-xl"
            style="min-height: 1200px;"
            loading="lazy"
          ></iframe>
          <p class="text-center text-sm text-gray-400 mt-4">
            Menu not loading? <a href="../assets/images/menu.pdf" class="text-neon-blue hover:text-neon-magenta underline transition-colors">View it directly here</a>.
          </p>
        </div>

  </section>

  {# ===== CTA BACK HOME ===== #}
  <section class="py-16 bg-white text-center">
    <div class="max-w-screen-xl mx-auto px-4">
      <h2 class="font-display text-3xl text-gray-900 mb-4">Ready to Order?</h2>
      <p class="text-lg text-gray-500 mb-8">Stop by or give us a call — we'd love to serve you!</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="tel:{{ client.phone }}" class="inline-block bg-poke-red hover:bg-red-800 text-white font-bold py-3 px-8 rounded-full text-lg transition-all hover:scale-105 shadow-md">
          Call Us
        </a>
        <a href="/#contact" class="inline-block bg-poke-green hover:bg-green-800 text-white font-bold py-3 px-8 rounded-full text-lg transition-all hover:scale-105 shadow-md">
          Get Directions
        </a>
      </div>
    </div>
  </section>

{% endblock %}
